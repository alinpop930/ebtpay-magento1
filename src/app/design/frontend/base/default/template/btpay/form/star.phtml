    <li>
        <label for="<?php echo $this->getMethodCode() ?>_rambursare"><?php echo Mage::helper('btpay')->__('Installments') ?>:</label>
        <div class="input-box">
            <select id="<?php echo $this->getMethodCode() ?>_rambursare" name="payment[rambursare]" class="required-entry">
