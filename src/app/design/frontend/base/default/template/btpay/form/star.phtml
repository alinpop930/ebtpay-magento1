    <li>
        <div class="<?php echo $this->getMethodCode() ?>-instructions-content" style="background-color: white;  border-color: #E4E4E4; padding: 5px; border: 1px solid #BBB6A5; overflow: auto;">
            <?php echo nl2br($this->getInstructions()) ?>
        </div>
    </li>
    <?php endif; ?>
